@model IEnumerable<EasyContacts.Models.Contato>

@{
    ViewData["Title"] = "Meus Contatos";
}

<h1>Meus Contatos</h1>

<form asp-action="Index" method="get">
    <div class="input-group mb-3">
        <input type="text" name="pesquisaNome" class="form-control" placeholder="Pesquisar por nome..." value="@ViewBag.Pesquisa">
        <button class="btn btn-outline-primary" type="submit">Buscar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Novo Contato</a>
</p>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>

                @* --- Botões de Ação Coloridos --- *@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>